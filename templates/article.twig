{% extends "home.twig" %}

{% block content %}
    <!-- Page Content -->
    <section class="content">
        <div class="container">




            <div class="article">
                <div class="header_articles">
                    <div class="title_header">
                        <a href="http://localhost/blog/?page=article&id={{ article.id }}"><h3>{{ article.titre }}</h3></a>
                    </div>
                    {% if session.statut == true %}
                    <div class="delete_header">
                        <a href="http://localhost/blog/?page=delete&id={{ article.id }}"><img class="delete_btn" title="supprimer" alt="supprimer" src="web/img/delete.svg" width="27em" height="auto"></a>
                        <a href="http://localhost/blog/?page=modify&id={{ article.id }}"><img class="modify_btn" title="editer" alt="editer" src="web/img/modify.svg" width="30em" height="auto"></a>
                    </div>
                    {% endif %}
                </div>
                <div class="body_articles">
                    <p>{{ article.texte }} ... <p>
                </div>
                <div class="footer_articles">
                    <p>Publi√© le {{ article.date|date("d/m/Y") }}</p>
                </div>
            </div>


            <div class="commentaires">


                {% for commentaire in commentaires %}

                    <div class="commentaire">
                        <div class="auteur_commentaire">
                            <h4>{{ commentaire.auteur }} </h4>
                        </div>
                        <div class="texte_commentaire">
                            <p>{{ commentaire.texte }}</p>
                        </div>
                    </div>
                {% endfor %}

            </div>

            <div class="wiziwig">

            <form action="http://localhost/blog/?page=post_comment" method=POST>
                Titre:<br><input type="text" name="auteur"><br>
                texte:<br><input type="text" name="texte"><br>
                <input style="visibility: hidden;" value="{{ article.id }}" name="id_article">
                <input type="submit" value="Submit">
            </form>

            </div>





        </div>
    </section>

{% endblock %}




{% block script %}


<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=218h2ppq5qps0std3k5qz1z6p9lnpisfzwt2z9b2z0kum0ri"></script>

<script>
    tinymce.init({
        width: "70%",
        height: "50px",

        selector: "textarea",
        plugins: "a11ychecker, advcode, linkchecker, media mediaembed, powerpaste, tinymcespellchecker",
        toolbar: "a11ycheck, code"
    });
</script>
{% endblock %}